{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --no-cache --continue",
    "lint": "turbo run lint",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "release": "turbo build --filter=docs^... && changeset publish",
    "test": "turbo test",
    "version-packages": "turbo run build lint test",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "documentation": "turbo run docs && mkdir -p temp && cp packages/*/temp/* temp/ && api-documenter markdown -i temp -o docs",
    "demo": "turbo run demo"
  },
  "devDependencies": {
    "@lukso/data-provider-ipfs-http-client": "workspace:*",
    "@lukso/data-provider-pinata": "workspace:*",
    "eslint": "^7.32.0",
    "eslint-config-lukso": "workspace:*",
    "jest": "^29.7.0",
    "jest-presets": "workspace:*",
    "prettier": "^2.8.8",
    "turbo": "^1.12.2"
  },
  "packageManager": "pnpm@8.6.10",
  "dependencies": {
    "@microsoft/api-documenter": "^7.23.20",
    "@microsoft/api-extractor": "^7.39.4",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "formdata-node": "^6.0.3",
    "source-map-support": "^0.5.21",
    "tsup": "^8.0.1",
    "typescript-eslint": "0.0.1-alpha.0",
    "zx": "^7.2.3"
  }
}
